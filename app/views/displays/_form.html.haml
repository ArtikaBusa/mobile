= form_for @display do |f|
  - if @display.errors.any?
    #error_explanation
      %h2= "#{pluralize(@display.errors.count, "error")} prohibited this display from being saved:"
      %ul
        - @display.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
