#mybody
  .container
    .row
      .col-sm-5.mx-auto
        .card.card-light
          .card-header
            .text-center Edit profile
          .card-body
            = form_for(@seller, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              = devise_error_messages!
              .field
                .round-image-50
                  - if @seller.profile_photo.attached?
                    = image_tag(@seller.profile_photo, width: "200px", height: "200px")
              .field
                = f.label :profile_photo
                = f.file_field :profile_photo, autofocus: true, autocomplete: "profile_photo",:class =>"form-control"
              %br/
              .field
                = f.label :name
                = f.text_field :name, autofocus: true, autocomplete: "name",:class =>"form-control"
              %br/
              .field
                = f.label :email
                = f.email_field :email, autofocus: true, autocomplete: "email",:class =>"form-control"
              %br/
              .field
                = f.label :contact_no
                = f.text_field :contact_no, autofocus: true, autocomplete: "contact_no",:class =>"form-control"
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
              %br/
              .field
                = f.label :password
                %i (leave blank if you don't want to change it)
                = f.password_field :password, autocomplete: "password", class: 'form-control'
                - if @minimum_password_length
                  %em
                    = @minimum_password_length
                    characters minimum
              %br/
              .field
                = f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "password_confirmation", class: 'form-control'
              %br/
              .field
                = f.label :current_password
                %i (we need your current password to confirm your changes)
                = f.password_field :current_password, autocomplete: "current_password", class: "form-control"
              %br/

              .actions
                = f.submit "Update" ,class: "btn btn-lg btn-success btn-block"
              %br/
              = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-success btn-block"
          %br/
          .card-footer
            = render "sellers/shared/links"
