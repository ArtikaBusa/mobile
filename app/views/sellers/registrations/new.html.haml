#mybody
  .container
    .row
      .col-sm-5.mx-auto
        .card.bg-light
          .card-header
            %h5.card-title.text-center Sign up
          .card-body
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              .field
                = f.label :name
                = f.text_field :name, autofocus: true, autocomplete: "name",:class =>"form-control"
              %br/
              .field
                = f.label :email
                = f.email_field :email, autofocus: true, autocomplete: "email",:class =>"form-control"
              %br/
              .field
                = f.label :contact_no
                = f.text_field :contact_no, autofocus: true, autocomplete: "contact_no",:class =>"form-control"
              %br/
              .field
                = f.label :address
                = f.text_field :address, autofocus: true, autocomplete: "address",:class =>"form-control"
              %br/
              .field
                = f.label :password
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                = f.password_field :password, autocomplete: "new-password",:class =>"form-control"
              %br/
              .field
                = f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
              %br/
              .field
                = f.label :image
                = f.file_field :image, autofocus: true, autocomplete: "images",:class =>"form-control"
              %br/
              .actions
                = f.submit "sign up" ,:class => "btn btn-lg btn-success btn-block"
          %br/
          .card-footer
            = render "sellers/shared/links"
