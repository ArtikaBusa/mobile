.nested-fields
  .card.nestedform
    %h6 Product Variant
    = f.select :product_variant_id, options_from_collection_for_select(@product_variant.product_variants, :id, :name), { prompt: true }, class: "custom-select mb-3"
    .form-group.row
      .col-sm-3
        .form-check-label Price
        = f.number_field :price, class: "form-control"
      .col-sm-3
        .form-check-label Discount
        = f.number_field :discount, class: "form-control"
      .col-sm-3
        .form-check-label Final Price
        = f.text_field :final_price, class: "form-control"
    = link_to_remove_association fa_icon("trash"), f, class: "remove"
